<!-- views/pages/index.ejs -->

<!DOCTYPE html>
<html lang="en">

<head>
  <%- include ('../partials/head.ejs') %>
  <link rel="stylesheet" href="styles/index.css">
</head>

<body>
  <div class="w-full">
    <div class="flex h-screen">
      <a style="top: 2rem; left: 2rem"
        class="capitalize font-bold hover:underline transition-all duration-300 text-xl absolute" href="/">üè† home <<
          </a>
      <div class="w-3/5 bg-gray-300 flex flex-col items-center justify-center">
        <img style="width: 400px" src="images/sign-in.svg" alt="sign-in">
        <%- include ('../partials/footer.ejs') %>
      </div>
      <div class="flex justify-center items-center w-2/5">
        <form class="mx-32 w-full p-8 shadow-lg flex flex-col rounded bg-white p-3">
          <p class="font-bold text-2xl uppercase text-green-500 flex items-center">
            <span>Sign in</span>
            <svg class="w-6 h-6 ml-3" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"
              stroke-linecap="round" stroke-linejoin="round">
              <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
              <path d="M23 21v-2a4 4 0 0 0-3-3.87"></path>
              <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
              <circle cx="9" cy="7" r="4"></circle>
            </svg>
          </p>
          <div class="input-material">
            <input autocomplete="off" name="username" type="text" placeholder="&nbsp;">
            <label class="flex items-center" for="name">
              <svg class="w-6 h-6 mr-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"
                stroke-linecap="round" stroke-linejoin="round">
                <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
                <circle cx="12" cy="7" r="4"></circle>
              </svg>
              <span>username</span>
            </label>
          </div>
          <p id="username-err" class="text-sm h-8 text-red-500 font-bold"></p>
          <div class="input-material">
            <input autocomplete="off" name="password" type="password" placeholder="&nbsp;">
            <label class="flex items-center" for="password">
              <svg class="w-6 h-6 mr-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"
                stroke-linecap="round" stroke-linejoin="round">
                <path
                  d="M21 2l-2 2m-7.61 7.61a5.5 5.5 0 1 1-7.778 7.778 5.5 5.5 0 0 1 7.777-7.777zm0 0L15.5 7.5m0 0l3 3L22 7l-3-3m-3.5 3.5L19 4">
                </path>
              </svg>
              <span>password</span>
            </label>
          </div>
          <p id="password-err" class="text-sm h-8 text-red-500 font-bold"></p>
          <div class="flex justify-end my-3">
            <div class="flex">
              <span>Don't have an account?</span>
              <a class="transition-all duration-300 hover:underline hover:text-green-500 font-bold ml-2"
                href="/sign-up">sign up</a>
            </div>
          </div>
          <div class="flex items-center justify-center mt-4">
            <button
              class="rounded hover:shadow transition-all duration-300 text-white bg-green-500 border-none cursor-pointer px-4 py-1">
              login</button>
          </div>
        </form>
      </div>
    </div>
  </div>
  <script>
    // JS goes from here
  </script>
</body>

</html>
